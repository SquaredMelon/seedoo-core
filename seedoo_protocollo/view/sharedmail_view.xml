<openerp>
    <data>
        <record model='ir.ui.view' id='protocollo_sharedmail_form'>
            <field name="name">protocollo.sharedmail.form</field>
            <field name="model">mail.message</field>
            <field name="priority">100</field>
            <field name="context">{'sharedmail_messages': True}</field>
            <field name="arch" type="xml">
                <form string="E-mail da Protocollare" version="7.0" create="false" edit="false" delete="false">
                    <header>
                        <button name="%(create_protocollo_mailpec_action)d"
                                type="action" string="Crea Bozza Protocollo"
                                context="{'attachment_ids':attachment_ids,'message_type':'mail'}"
                                attrs="{'invisible':['|',('sharedmail_state','!=','new'),('sharedmail_type','!=','sharedmail')]}"
                                class="oe_highlight_positive"/>
                        <button name="action_not_protocol" type='object'
                                string="Non protocollare"
                                attrs="{'invisible':['|',('sharedmail_state','!=','new'),('sharedmail_type','!=','sharedmail')]}"
                                class="oe_highlight_warning"/>

                        <field name="sharedmail_state" widget="statusbar" invisible="1"/>
                        <field name="sharedmail_type" invisible="1"/>
                    </header>
                    <sheet>
                        <div class="message_header">
                            <group col="4">
                                <field name="sharedmail_server_user" attrs="{'invisible':[('sharedmail_type','!=','sharedmail')]}" string="Account"/>
                                <newline/>
                                <field name="email_from" attrs="{'invisible':[('sharedmail_type','!=','sharedmail')]}"/>
                                <field name="date"/>
                            </group>
                        </div>
                        <group class="message_data">
                            <field name="subject" colspan="4"/>
                            <group class="body-message-container">
                                <field name="body" colspan="4" string="Corpo del messaggio"/>
                            </group>
                            <field name="attachment_ids" invisible="1"/>
                            <!--<separator string="Documenti" colspan="4"/>-->
                            <!--<group>-->
                                <!--<field name="pec_eml" invisible="1"/>-->
                                <!--<field name="pec_eml_fname" invisible="1"/>-->
                                <!--<field name="pec_eml_content" filename="pec_eml_fname" colspan="4" />-->
                            <!--</group>-->
                            <group>
                                <field name="message_attachs">
                                    <tree>
                                        <field name="name"/>
                                        <field name="file_type"/>
                                     </tree>
                                </field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model='ir.ui.view' id='protocollo_sharedmail_tree'>
            <field name="name">protocollo.sharedmail.tree</field>
            <field name="model">mail.message</field>
            <field name="priority">100</field>
            <field name="arch" type="xml">
                <tree string="E-mail da Protocollare" create="false" edit="false" delete="false">
                    <field name="email_from"/>
                    <field name="subject"/>
                    <field name="date"/>
                    <field name="sharedmail_server_user" string="Account"/>
                </tree>
            </field>
        </record>


        <record model="ir.actions.act_window" id="protocollo_sharedmail_act">
            <field name="name">E-mail</field>
            <field name="res_model">mail.message</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('server_sharedmail_id.sharedmail','=',True),('sharedmail_type','=','sharedmail'),('parent_id','=',False),('server_sharedmail_id.user_sharedmail_ids','in',uid),('sharedmail_state','=','new')]</field>
            <field name="context">{'sharedmail_messages': True}</field>
        </record>

        <record model="ir.actions.act_window.view"
                id="protocollo_sharedmail_act_tree">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="protocollo_sharedmail_tree"/>
            <field name="act_window_id" ref="protocollo_sharedmail_act"/>
        </record>
        <record model="ir.actions.act_window.view"
                id="protocollo_sharedmail_act_form">
            <field name="sequence" eval="1"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="protocollo_sharedmail_form"/>
            <field name="act_window_id" ref="protocollo_sharedmail_act"/>
        </record>

    </data>
</openerp>
